  var decodeHtmlEntity = function(str) {
    return str.replace(/&#x(\w+);/g, function(match, hex) {
      return String.fromCharCode(parseInt(hex, 16));
    });
  };

section.post-list
  if !is_home()
    header
      if is_archive()
        if page.month
          h2 Archives: #{page.month}/#{page.year}
        else if page.year
          h2 Archives: #{page.year}
        else
          h2 Archives
      else if is_tag()
        h2 Tag: #{page.tag}
      else if is_category()
        h2 #{page.now_page_current_url}
    hr
      
  each post in getPostList()
    article.post-list__item
      // title / 본문 내용/
      .post-list__item__meta
        h3.post-list__item__title
          if post.link
            a(
              href=post.link
              title=post.link
              target="_blank"
            )= post.link
          else
            a(
              href=url_for(post.path)
              title!=post.title || 'Untitled'
            )!= post.title || 'Untitled'
        p.post-list__item__description #{post.date.format(config.date_format)} • #{post.author || config.author}

