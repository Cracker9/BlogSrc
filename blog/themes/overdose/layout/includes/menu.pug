 function mainPage() {
   var this_page = page.path.split("/")[0];
   if (this_page == 'index.html' || this_page == 'page') {
      return true;
    }
   for (key in theme.menu) {
     if (this_page == key.toLowerCase()) {
       return true;
     }
   }
   return false;
 }

nav#menu.menu(class=mainPage() ? 'main' : '')
