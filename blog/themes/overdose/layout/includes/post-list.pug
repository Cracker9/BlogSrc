  var page_current_url = page.current_url.split('/');
  page.now_page_current_url = '';
  for (var i = 1; i < page_current_url.length -1; i++) {
    page.now_page_current_url += page_current_url[i];
    if (i < page_current_url.length - 2) {
      page.now_page_current_url += " > "
    }
  }

  function getPostList() {
    var perPage = page.per_page || config.per_page;
    var skips = perPage * (page.current - 1);
    if (is_home()) {
      return site.posts
        .sort('date', -1)
        .skip(skips)
        .limit(perPage)
        .toArray();
    } else {
      return page.posts
        .limit(perPage)
        .toArray();
    }
  }
